<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameLevel2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_600"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backBT"
        android:layout_marginStart="@dimen/_104sdp"
        android:layout_marginTop="-140dp"
        android:layout_toEndOf="@+id/backBT">

        <ImageView
            android:id="@+id/sunRaysIV"
            android:layout_width="@dimen/_163sdp"
            android:layout_height="@dimen/_163sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/sunrays_600"/>

        <ImageView
            android:id="@+id/sunIV"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_51sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/sun_600"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/cloud0IV"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignBottom="@+id/backBT"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-600dp"
        android:src="@drawable/cloud0_600"/>

    <ImageView
        android:id="@+id/cloud6IV"
        android:layout_width="@dimen/_51sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignBottom="@+id/backBT"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_88sdp"
        android:layout_toEndOf="@+id/cloud0IV"
        android:src="@drawable/cloud6_600"/>

    <ImageView
        android:id="@+id/cloud1IV"
        android:layout_width="@dimen/_91sdp"
        android:layout_height="@dimen/_51sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cloud0IV"
        android:layout_marginEnd="-300dp"
        android:src="@drawable/cloud1_600"/>

    <ImageView
        android:id="@+id/cloud7IV"
        android:layout_width="@dimen/_59sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/backBT"
        android:layout_marginStart="@dimen/_204sdp"
        android:layout_toEndOf="@+id/cloud1IV"
        android:src="@drawable/cloud7_600"/>

    <ImageView
        android:id="@+id/cloud3IV"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-500dp"
        android:src="@drawable/cloud3_600"/>


    <ImageButton
        android:id="@+id/backBT"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/back_button_600"/>

    <ImageButton
        android:id="@+id/btNext"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignBottom="@+id/boyIV"
        android:layout_alignStart="@+id/boyIV"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_86sdp"
        android:background="@drawable/next_button_600"/>

    <ImageButton
        android:id="@+id/btPrevious"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignBottom="@+id/boyIV"
        android:layout_alignEnd="@+id/boyIV"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_86sdp"
        android:alpha="0.5"
        android:background="@drawable/previous_button_600"
        android:clickable="false"/>

    <LinearLayout
        android:id="@+id/boardsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36sdp">

            <ImageView
                android:id="@+id/smallBoardIV"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_185sdp"
                android:src="@drawable/small_blackboard_600"/>

            <RelativeLayout
                android:layout_width="@dimen/_138sdp"
                android:layout_height="@dimen/_104sdp"
                android:layout_alignEnd="@+id/smallBoardIV"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp">

                <TextView
                    android:id="@+id/smallBoardLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/cabin_sketch_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Count Stars"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/smallBoardLabel"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="visible"/>

                        <ImageView
                            android:id="@+id/star6"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star7"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/star8"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/star9"
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_23sdp"
                            android:src="@drawable/count_star_600"
                            android:visibility="invisible"/>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_8sdp">

            <ImageView
                android:id="@+id/bigBoardIV"
                android:layout_width="@dimen/_203sdp"
                android:layout_height="@dimen/_215sdp"
                android:src="@drawable/big_blackboard_600"/>

            <RelativeLayout
                android:id="@+id/baseLayout"
                android:layout_width="@dimen/_169sdp"
                android:layout_height="@dimen/_124sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_alignTop="@+id/bigBoardIV"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_alignEnd="@+id/bigBoardIV">

                <RelativeLayout
                    android:id="@+id/contentLayoutGameLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="false"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_3sdp">


                </RelativeLayout>

                <TextView
                    android:id="@+id/bigBoardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/cabin_sketch_bold"
                    android:text="Draw Number Here"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"/>

            </RelativeLayout>




            <ImageButton
                android:id="@+id/dusterIB"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignBottom="@+id/bigBoardIV"
                android:layout_marginBottom="@dimen/_69sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:background="@drawable/duster_button_600"/>

            <ImageButton
                android:id="@+id/chalkIB"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignBottom="@+id/bigBoardIV"
                android:layout_marginBottom="@dimen/_69sdp"
                android:layout_alignEnd="@+id/bigBoardIV"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/chalk_button_600"/>


        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/boyIV"
        android:layout_width="@dimen/_93sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:src="@drawable/boy_600"/>

</RelativeLayout>
